<% include ../partials/header %>
<div class="container">
   <div class="row mt-3">
      <div class="col">
      <h1 class="text-center">Edit <%= photo.name %></h1>
      <div class="new-photo-form">
         <form action="/photos/<%= photo._id %>?_method=PUT" method="POST">
            <div class="form-group">
               <input class="form-control" type="text" name="photo[name]" placeholder="name" value="<%= photo.name %>">
            </div>
            <div class="form-group">
               <input class="form-control" type="text" name="photo[image]" placeholder="image url"  value="<%= photo.image %>">
            </div>
             <div class="form-group">
               <input class="form-control" type="text" name="photo[description]" placeholder="description"  value="<%= photo.description %>">
            </div>
            <div class="form-group">
               <button class="btn btn-lg btn-primary btn-block">Submit!</button>
            </div>
         </form>
         <a href="/photos">Go Back</a>
      </div>
   </div>
</div>
</div>
<% include ../partials/footer %>