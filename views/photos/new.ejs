<% include ../partials/header %>
<div class="container">
   <div class="row mt-3">
      <div class="col">
      <h1 class="text-center">Add a New Photo</h1>
      <div class="new-photo-form">
         <form action="/photos" method="POST">
            <div class="form-group">
               <label for="name">Name</label>
               <input id="name" class="form-control" type="text" name="name" placeholder="name">
            </div>
            
            <div class="form-group">
               <label for="price">Track Fee</label>
               <input id="price" class="form-control" type="number" name="price" placeholder="track fee" min="0" step="1">
            </div>
            
            <div class="form-group">
               <label for="image">Image URL</label>
               <input id="image" class="form-control" type="text" name="image" placeholder="image url">
            </div>
            
            <div class="form-group">
               <label for="location">Location</label>
               <input id="location" class="form-control" type="text" name="location" placeholder="track location">
            </div>
            
             <div class="form-group">
               <label for="description">Description</label>
               <input id="description" class="form-control" type="text" name="description" placeholder="description">
            </div>
            
            <div class="form-group">
               <button class="btn btn-lg btn-danger btn-block">Add My Photo!</button>
            </div>
         </form>
         <a href="/photos">Go Back</a>
      </div>
   </div>
</div>
</div>
<% include ../partials/footer %>