<% include ../partials/header %>

   <div class="container">
      <header class="jumbotron">
         <div class="container">
            <h1>Recent Photos From Riders Everywhere!</h1>
            <p>Show off <em>your</em> riding, at <em>your</em> local tracks!</p>
            <p>
               <a class="btn btn-danger btn-lg" href="/photos/new">Add Your Photo!</a>
            </p>
         </div>
      </header>
    
      <div class="row text-center">
         <% photos.forEach(function(photo){ %>
            <div class="col-md-3 col-sm-6 col-xs-12">
               <div class="img-thumbnail">
                   <img class="img-fluid" src="<%= photo.image %>">
                   <div class="caption">
                      <h4><%= photo.name %></h4>
                   </div>
                   <p>
                      <a href="/photos/<%= photo._id %>" class="btn btn-danger">More Info</a>
                   </p>
               </div>
            </div> 
         <% }) %>
      </div>
   </div>
   
<% include ../partials/footer %>