<% include ../partials/header %>
<div class="container">
   <div class="row mt-3">
      <div class="col">
      <h1 class="text-center">Add a New Comment to <%= photo.name %></h1>
      <div class="new-photo-form">
         <form action="/photos/<%= photo.id %>/comments" method="POST">
            <div class="form-group">
               <input class="form-control" type="text" name="comment[text]" placeholder="text">
            </div>
            <div class="form-group">
               <input class="form-control" type="text" name="comment[author]" placeholder="author">
            </div>
            <div class="form-group">
               <button class="btn btn-lg btn-primary btn-block">Add My Comment!</button>
            </div>
         </form>
         <a href="/photos">Go Back</a>
      </div>
   </div>
</div>
</div>
<% include ../partials/footer %>